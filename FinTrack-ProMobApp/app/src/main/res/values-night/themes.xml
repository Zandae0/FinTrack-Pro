<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AicomsApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorHint">@color/abu</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="android:statusBarColor">@color/merahtua</item>
        <item name="android:buttonTint">@color/black</item>
    </style>

<style name="Theme.AicomsApp" parent="Base.Theme.AicomsApp" />

    <style name="RadioButtonStyle" parent="Theme.AppCompat.DayNight">
        <item name="android:buttonTint">@color/radio_button_tint</item> <!-- Reference the ColorStateList here -->
        <item name="android:textColorPrimary">@color/black</item>
    </style>
    <style name="SearchViewText" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/abu</item>
    </style>
    <!-- styles.xml -->
        <!-- DatePicker Theme with white background -->
    <style name="CustomDatePickerTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <!-- Set the button text color to white -->
        <!-- Optionally set other colors to fit your design -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>
    <style name="PopupMenuStyle" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:textColor">#FFFFFF</item> <!-- White color -->
    </style>
    <style name="SpinnerTextStyle">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>