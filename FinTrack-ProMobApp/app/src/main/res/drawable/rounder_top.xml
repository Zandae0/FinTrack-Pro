<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Solid color for the background -->
    <solid android:color="@android:color/transparent" />


    <!-- Rounded corners -->
    <corners
        android:topLeftRadius="5dp"
        android:topRightRadius="5dp" />

    <!-- Outline or border -->
    <stroke
        android:width="0.5dp"
        android:color="@color/black" />  <!-- Color of the outline -->

    <!-- Optional padding inside the drawable -->
    <padding
        android:left="16dp"
        android:top="20dp"
        android:right="16dp"
        android:bottom="20dp" />
</shape>
