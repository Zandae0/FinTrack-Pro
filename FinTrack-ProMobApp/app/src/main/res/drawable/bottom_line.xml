<!-- res/drawable/bottom_line.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
    <!-- Transparent background -->
    <solid android:color="@android:color/transparent" />

    <!-- Padding to keep only the bottom line visible -->
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="-1dp" /> <!-- Adjust this if necessary -->

    <!-- Bottom line stroke only -->
    <stroke
        android:width="1dp"
        android:color="@color/black" /> <!-- Change to your desired line color -->
</shape>
