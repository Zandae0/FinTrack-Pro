<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Solid color for the background -->
    <solid android:color="@color/white" />

    <!-- Rounded corners -->
    <corners
        android:radius="5dp" />

    <!-- Outline or border -->
    <stroke
        android:width="0.5dp"
        android:color="@color/black" />  <!-- Color of the outline -->

    <!-- Optional padding inside the drawable -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>
