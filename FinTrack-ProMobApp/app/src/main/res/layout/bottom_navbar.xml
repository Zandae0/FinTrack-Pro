<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:menu="@menu/bottom_navigation_menu">

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Home Button -->
        <ImageButton
            android:id="@+id/home_button"
            android:layout_width="61dp"
            android:layout_height="41dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:src="@drawable/imprestfund"
            android:layout_margin="4dp" /> <!-- Adjusted margin -->

        <!-- Kas AICOMS Button -->
        <ImageButton
            android:id="@+id/kas_aicoms_button"
            android:layout_width="61dp"
            android:layout_height="41dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:src="@drawable/kaseaicome"
            android:layout_margin="4dp" /> <!-- Adjusted margin -->

        <!-- Floating Action Button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_add_circle_24"
            android:backgroundTint="#FF0000"
            android:layout_margin="8dp"
            app:tint="@android:color/white" />

        <!-- Note Button -->
        <ImageButton
            android:id="@+id/note_button"
            android:layout_width="61dp"
            android:layout_height="41dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:src="@drawable/notedua"
            android:layout_margin="4dp" /> <!-- Adjusted margin -->

        <!-- User Control Button -->
        <ImageButton
            android:id="@+id/user_control"
            android:layout_width="61dp"
            android:layout_height="41dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:src="@drawable/user_control"
            android:layout_margin="4dp" /> <!-- Adjusted margin -->

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
